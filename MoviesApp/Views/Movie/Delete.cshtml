@model MoviesApp.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4>Are you sure you want to delete this movie?</h4>
                </div>
                <div class="card text-center w-50 m-auto">
                  <h4 class="card-title">@Model.Title</h4>

                  <img src="@Model.ImgUrl" class="card-img" />

                  <div class="card-body">
                    <p class="bg-black text-white p-3 fw-bolder card-text">Genre: @Model.Genre</p>
                    <p class="card-text bg-warning p-3 fw-bold text-primary">Release Year: @Model.ReleaseYear</p>
                  </div>
                </div>

                <form asp-action="Delete" method="post">
                  <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center my-3">
                      <button type="submit" class="btn btn-danger">Confirm Delete</button>
                      <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
