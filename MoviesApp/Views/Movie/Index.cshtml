@model IEnumerable<MoviesApp.Models.Movie>

@{
    ViewData["Title"] = "Movies List";
}

<h2 class="text-center text-white bg-primary p-3 my-3">Top Box Office</h2>

<!-- TODO: Add "Add New Movie" button -->
